      // real people should not fill this in and expect good things - do not remove this or risk form bot signups
      div(style='position: absolute; left: -5000px;' aria-hidden='true')
        input(type='text' name='b_2d2c79c38b9ba9d57e0772e29_dd55dce70a' tabindex='-1' value='')
      .optionalParent
        .clear.foot
          input#mc-embedded-subscribe.button(type='submit' value='Subscribe' name='subscribe')
          p.brandingLogo
            a(href='http://eepurl.com/hYX-_X' title='Mailchimp - email marketing made easy and fun')
              img(src='https://eep.io/mc-cdn-images/template_images/branding_logo_text_dark_dtp.svg')

